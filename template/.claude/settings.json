{
  "includeCoAuthoredBy": false,
  "env": {
    "ENABLE_TOOL_SEARCH": "true",
    "AGENTFUL_WORKTREE_MODE": "auto"
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node bin/hooks/session-start.js",
            "timeout": 3,
            "description": "Intelligent context awareness - shows project status and suggests next steps"
          },
          {
            "type": "command",
            "command": "node bin/hooks/health-check.js",
            "timeout": 5,
            "description": "Quick agentful health check"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Write|Edit|NotebookEdit",
        "hooks": [
          {
            "type": "command",
            "command": "node bin/hooks/ensure-worktree.js",
            "timeout": 10,
            "description": "Ensure agents work in git worktrees (disable with AGENTFUL_WORKTREE_MODE=off)"
          }
        ]
      },
      {
        "matcher": "Write|Edit|NotebookEdit",
        "hooks": [
          {
            "type": "command",
            "command": "node bin/hooks/block-random-docs.js",
            "timeout": 3,
            "description": "Block random markdown file creation (disable with AGENTFUL_ALLOW_RANDOM_DOCS=true)"
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "node bin/hooks/block-file-creation.js",
            "timeout": 3,
            "description": "Block arbitrary file creation outside approved directories"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|NotebookEdit",
        "hooks": [
          {
            "type": "command",
            "command": "node bin/hooks/product-spec-watcher.js",
            "timeout": 3,
            "description": "Watch for product spec changes and auto-trigger generation"
          }
        ]
      },
      {
        "matcher": "Write|Edit|NotebookEdit",
        "hooks": [
          {
            "type": "command",
            "command": "node bin/hooks/analyze-trigger.js",
            "timeout": 3,
            "description": "Check if file changes warrant analysis"
          }
        ]
      },
      {
        "matcher": "Write|Edit|NotebookEdit",
        "hooks": [
          {
            "type": "command",
            "command": "node bin/hooks/architect-drift-detector.js",
            "timeout": 3,
            "description": "Detect when architect needs to re-analyze project"
          }
        ]
      },
      {
        "matcher": "Write|Edit|NotebookEdit",
        "hooks": [
          {
            "type": "command",
            "command": "node bin/hooks/package-metadata-guard.js",
            "timeout": 3,
            "description": "Protect package.json ownership metadata from accidental corruption"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node bin/hooks/phase-tracker.js",
            "timeout": 3,
            "description": "Track current agentful phase"
          }
        ]
      }
    ]
  },
  "permissions": {
    "deny": [
      "Bash(rm -rf /)",
      "Bash(rm -rf ~/.*)",
      "Bash(rm -rf /.*)",
      "Bash(dd:*)",
      "Bash(mkfs:*)"
    ]
  }
}
